---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";
import Cardproject from "../components/cardproject.astro";
import Image from "astro/components/Image.astro";
import Headermenu from "../components/headermenu.astro";
---

<Layout>
  <Headermenu />
  <header class="header">
    <h1>Contacto</h1>
  </header>
  <main class="main">
    <form class="form" id="contact-form">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" required />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />

      <label for="message">Mensaje:</label>
      <textarea id="message" name="message" rows="4" required></textarea>

      <button type="submit">Enviar</button>
    </form>
    <div class="contacto-map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3125.741254833318!2d-6.408988724327642!3d38.424344074478086!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd13fe27c11f5d0f%3A0x2d5f80feb445d5c8!2sC.%20Poligono%20los%20Ca%C3%B1os%202B%2C%2006300%20Zafra%2C%20Badajoz!5e0!3m2!1ses!2ses!4v1716994289763!5m2!1ses!2ses"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .header {
    background-color: var(--Cl-Grey);
    color: white;
    padding: 1rem;
    text-align: center;
  }

  .main {
    max-width: 800px;
    margin: 2rem auto;
    background-color: white;
    padding: 2rem;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);

    .contacto-map {
      margin-top: 2rem;
      & iframe {
        width: 100%;
      }
    }
  }

  .form {
    display: flex;
    flex-direction: column;
  }

  .form label {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .form input,
  .form textarea {
    border: 1px solid var(--Cl-LightGrey);
    border-radius: 5px;
    padding: 0.5rem;
    margin-bottom: 1rem;
    width: 100%;
  }

  .form button {
    background-color: var(--Cl-Grey);
    color: white;
    border: none;
    border-radius: 5px;
    padding: 0.5rem 2rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .form button:hover {
    background-color: var(--Cl-Grey);
  }
</style>
